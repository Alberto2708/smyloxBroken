<Window x:Class="SmyloxFirstUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmyloxFirstUI"
        xmlns:custom="clr-namespace:SmyloxFirstUI.Custom"
        mc:Ignorable="d"
        Title="Smylox" Height="740" Width="1280"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#F5F7FA"/>
        <SolidColorBrush x:Key="TitleBarBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="AccentColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#6B7280"/>
        <SolidColorBrush x:Key="HoverBackground" Color="#F3F4F6"/>

        <!-- Window Button Style -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E02424"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PrimaryBackground}" 
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="#E5E7EB">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                            Opacity="0.15" 
                            BlurRadius="20" 
                            ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource TitleBarBackground}"
                    CornerRadius="12,12,0,0"
                    BorderThickness="0,0,0,1"
                    BorderBrush="#E5E7EB"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Title and Icon -->
                    <StackPanel Grid.Column="0" 
                               Orientation="Horizontal" 
                               VerticalAlignment="Center"
                               Margin="16,0,0,0">
                        <Border Background="{StaticResource AccentColor}"
                               Width="24"
                               Height="24"
                               CornerRadius="6"
                               Margin="0,0,12,0">
                            <TextBlock Text="S"
                                     Foreground="White"
                                     FontWeight="Bold"
                                     FontSize="14"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Smylox"
                                 FontSize="14"
                                 FontWeight="SemiBold"
                                 Foreground="{StaticResource TextPrimary}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="2" 
                               Orientation="Horizontal"
                               HorizontalAlignment="Right">
                        <Button Style="{StaticResource WindowButtonStyle}"
                               Content="&#xE921;"
                               Click="MinimizeButton_Click"
                               ToolTip="Minimize"/>
                        <Button Style="{StaticResource WindowButtonStyle}"
                               Content="&#xE922;"
                               Click="MaximizeButton_Click"
                               ToolTip="Maximize"/>
                        <Button Style="{StaticResource CloseButtonStyle}"
                               Content="&#xE8BB;"
                               Click="CloseButton_Click"
                               ToolTip="Close"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <ContentControl Content="{Binding CurrentViewModel}"
                              Margin="0">
                    <ContentControl.Resources>
                        <Style TargetType="ContentControl">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ContentControl">
                                        <Grid>
                                            <ContentPresenter x:Name="ContentPresenter"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="Content" SourceName="ContentPresenter" Value="{x:Null}">
                                                <Setter TargetName="ContentPresenter" Property="Opacity" Value="0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ContentControl.Resources>
                </ContentControl>

                <!-- Modal Overlay -->
                <custom:Modal Panel.ZIndex="1000" IsOpen="{Binding IsOpen}">
                    <ContentControl Content="{Binding CurrentModalViewModel}"/>
                </custom:Modal>
            </Grid>
        </Grid>
    </Border>
</Window>